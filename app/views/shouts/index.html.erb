<h2> Shouts </h2>

<%= form_for @shout do |form| %>
  <%= form.text_field :body %>
  <%= form.submit "SHOUT!" %>
<% end %>

<div>
  <ul>
  <% @users.each do |user| %>
   <li>
     <%= user.email %> <%= button_to "Follow", [user, @following_relationship] %>
   </li>
  <% end %>
  </ul>
</div>

<ul>
  <% @shouts.each do |shout| %>
    <li><%= shout.body %></li>
  <% end %>
</ul>
